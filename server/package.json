{
  "name": "blogify-server",
  "version": "1.0.0",
  "description": "Backend API for Blogify blogging platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
